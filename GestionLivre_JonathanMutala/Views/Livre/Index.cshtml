@model System.Data.DataTable

@{
    ViewData["Title"] = "Liste de livre";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create a new</a>
</p>

<table class="table table-bordered">
    <thead class="thead-light">
        <tr>
            <th>
               Titre du livre
            </th>
            <th>
                Auteur du livre
            </th>
            <th>
                Date de publication du livre
            </th>
            <th>
                <a asp-action="AddOrEdit">Create a new</a>
            </th>
        </tr>
    </thead>
    <tbody>
@for(int i = 0; i < Model.Rows.Count;i++) {
        <tr>
            <td>
               @Model.Rows[i]["Titre"]
            </td>
            <td>
               @Model.Rows[i]["Auteur"]
            </td>
            <td>
                @Model.Rows[i]["DatePublication"]
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@Model.Rows[i]["IDLivre"]">Edit</a> |
                <a asp-action="Delete" asp-route-id="@Model.Rows[i]["IDLivre"]">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
